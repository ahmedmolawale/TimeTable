<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/sound_section"
        >
    <CheckBoxPreference
        android:key="@string/pref_checkbox_key"
        android:title="@string/mute"
        android:summary="@string/auto_mute"
        android:defaultValue="false"
        android:textColor="@color/black"/>
    <CheckBoxPreference
        android:key="@string/pref_checkbox_key_2"
        android:title="@string/vibrate"
        android:summary="@string/auto_vibrate"
        android:defaultValue="false"
        android:textColor="@color/black"/>
    <Preference android:title="@string/pref_notification_sound"
        android:key="@string/pref_notification_key"
        android:summary="@string/pref_notification_summary"
       />

        <Preference android:title="@string/alarm"
            android:summary="@string/cancel_all_alarm"
            android:key="@string/pref_alarm_key"
            />

    </PreferenceCategory>


    <PreferenceCategory
        android:title="@string/data_section"
        >


        <Preference android:title="@string/data"
            android:summary="@string/delete_data_summary"
            android:key="@string/pref_data_key"
        />




    </PreferenceCategory>


</PreferenceScreen>